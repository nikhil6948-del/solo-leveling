<!-- AUDIO -->
<audio id="levelup" src="https://assets.mixkit.co/sfx/preview/mixkit-game-level-completed-2059.mp3"></audio>

<script>
let level = +localStorage.getItem("level") || 1;
let exp = +localStorage.getItem("exp") || 0;
let unlocked = localStorage.getItem("unlock")==="true";

const ranks=["E","D","C","B","A","S","SHADOW MONARCH"];

const workouts=[
["100 Push-ups","100 Sit-ups","10 km Run"],
["150 Squats","50 Pull-ups","Plank 2 min"],
["200 Crunches","Jump Rope 500x"],
["100 Burpees","200 Lunges"],
["Core Training","Shadow Boxing"],
["Extreme Training"],
["Rest & Meditation"]
];

function rankCalc(){
  return ranks[Math.min(Math.floor(level/5),ranks.length-1)];
}

function train(){
  exp+=20;
  if(exp>=100){
    exp=0;
    level++;
    document.body.classList.add("flash");
    document.getElementById("levelup").play();
    setTimeout(()=>document.body.classList.remove("flash"),200);
  }
  save();
  update();
}

function update(){
  document.getElementById("level").innerText=`Level: ${level}`;
  document.getElementById("rank").innerText=`Rank: ${rankCalc()}`;
  document.getElementById("expText").innerText=`EXP: ${exp}%`;
  document.getElementById("expFill").style.width=exp+"%";
  if(unlocked)document.getElementById("lock").style.display="none";
}

function save(){
  localStorage.setItem("level",level);
  localStorage.setItem("exp",exp);
}

function unlock(){
  unlocked=true;
  localStorage.setItem("unlock","true");
  update();
  alert("SYSTEM UNLOCKED ‚ö°");
}

document.getElementById("tasks").innerHTML=
workouts[new Date().getDay()%7].map(t=>`<li>‚òëÔ∏è ${t}</li>`).join("");

update();
</script>

